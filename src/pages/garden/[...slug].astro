---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content'; // 1. 引入类型
import '../../styles/global.css';

export async function getStaticPaths() {
  const blogEntries = await getCollection('garden');
  return blogEntries.map((entry: CollectionEntry<'garden'>) => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

// 2. 告诉 TS，Astro.props 里包含一个叫 entry 的东西，且它是 garden 集合的数据
interface Props {
  entry: CollectionEntry<'garden'>;
}

// 3. 现在 TS 知道 entry 是什么了
const { entry } = Astro.props;
const { Content } = await entry.render();

const dateStr = entry.data.date.toISOString().split('T')[0];
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{entry.data.title} - Jeambo</title>
  </head>
  <body>
    <main class="container">
      
      <nav style="margin-bottom: 3rem;">
        <a href="/" class="font-ui" style="font-size: 0.8rem; color: var(--text-muted);">← Back to Garden</a>
      </nav>

      <header style="margin-bottom: 3rem; text-align: center;">
        <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">{entry.data.title}</h1>
        <div class="font-ui" style="font-size: 0.85rem; color: var(--text-muted);">
          {dateStr} · {entry.data.status}
        </div>
      </header>

      <article style="font-size: 1.1rem; line-height: 1.8;">
        <Content />
      </article>

    </main>
  </body>
</html>